<style>
    .column{
        margin: 5px 8px 5px 8px;
        padding-left: 1rem;
        padding-bottom: 1rem;
        padding-right: 1rem;
        border: 2px solid black;
        width: 20rem;
    }

    .img-container>img{
        min-height: 20rem;
        min-width:20rem;
        max-width: 20rem;
        max-height: 20rem;
    }
    .column>h3{
        text-transform: uppercase;
    }

    .img-container {
        width: 100%;
        height: 20rem;
        overflow: hidden; /* Hide overflow to ensure image fits within the box */
    }


    .column>a{
        text-decoration: none;
        color: black;
    }
    @media(max-width:768px){
        .img-container>img{
            max-width: 8rem;
            max-height: 20rem;
            margin: 2px 2px 2px 2px;
        }
        .column{
            max-width: 8rem;
        }
        
        
    }
</style>
<div class="column"><a href="/productDetails/{{id}}",>
   <div class="img-container">
    <img src="{{imageUrl}}" alt="Product Image">
   </div>
   <div class="content">
    <h3>{{name}}</h3>
    <p class="price" style="color: #212a2f;">{{price}}</p>
    <div class="rating">
        <i class="fa-regular fa-star"></i>
        <i class="fa-regular fa-star"></i>
        <i class="fa-regular fa-star"></i>
        <i class="fa-regular fa-star"></i>
        <i class="fa-regular fa-star"></i>
    </div>
   </div>
   </a>
</div>